<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Odontología especializada</title>
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <link href="assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <link href="assets/plugins/fullcalendar/fullcalendar.min.css" rel="stylesheet">
    <link href="assets/css/main.css" rel="stylesheet">

    <link href="assets/css/themes/all-themes.css" rel="stylesheet" />
</head>

<body class="theme-cyan">
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Por favor espere...</p>
        </div>
    </div>
    <div class="overlay"></div>
    <ul id="f-menu" class="mfb-component--br mfb-zoomin" data-mfb-toggle="hover">
        <li class="mfb-component__wrap">
            <a href="#" class="mfb-component__button--main g-bg-cyan">
                <i class="mfb-component__main-icon--resting zmdi zmdi-plus"></i>
                <i class="mfb-component__main-icon--active zmdi zmdi-close"></i>
            </a>
            <ul class="mfb-component__list">
                <li>
                    <a href="/doctor-panel-de-control" data-mfb-label="Citas"
                        class="mfb-component__button--child bg-blue">
                        <i class="zmdi zmdi-calendar mfb-component__child-icon"></i>
                    </a>
                </li>
                <li>
                    <a href="/info-medicos" data-mfb-label="Información Doctor"
                        class="mfb-component__button--child bg-orange">
                        <i class="zmdi zmdi-account-o mfb-component__child-icon"></i>
                    </a>
                </li>

                <li>
                    <a href="/historial-paciente" data-mfb-label="Historial Medico" class="mfb-component__button--child bg-purple">
                        <i class="zmdi zmdi-balance-wallet mfb-component__child-icon"></i>
                    </a>
                </li>
            </ul>
        </li>
    </ul>
    <!-- <div id="morphsearch" class="morphsearch"> -->

    <nav class="navbar clearHeader">
        <div class="col-12">
            <div class="navbar-header"> <a href="javascript:void(0);" class="bars"></a> <a class="navbar-brand"
                    href="doctor-panel-control">Odontología Especializada</a> </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="javascript:void(0);" class="js-right-sidebar" data-close="true"><i
                            class="zmdi zmdi-settings"></i></a></li>
            </ul>
        </div>
    </nav>
    <section>
        <aside id="leftsidebar" class="sidebar">
            <div class="user-info">
                <div class="admin-image"> <img src="assets/images/random-avatar7.jpg" alt=""> </div>
                <div class="admin-action-info"> <span>Bienvenido</span>
                    <h3><%= nombre %></h3>
                    <ul>
                        <li><a data-placement="bottom" title="Cerrar Sesion" href="cerrar-sesion"><i
                                    class="zmdi zmdi-sign-in"></i></a></li>
                    </ul>
                </div>

            </div>

            <div class="menu">
                <ul class="list">
                    <li class="header">Menú de navegación</li>
                    <li class="active open"><a href="javascript:void(0);" class="menu-toggle"><i
                                class="zmdi zmdi-calendar-check"></i><span>Citas</span> </a>

                         <ul class="ml-menu">
                            <li class="active"><a href="/doctor-panel-de-control ">Agenda del Doctor</a></li>
            
                         </ul>
                        
                </li>
                <li><a href="javascript:void(0);" class="menu-toggle"><i class="zmdi zmdi-account-add"></i><span>Doctores</span> </a>
                    <ul class="ml-menu">
                        <li><a href="/info-medicos">Información Doctores</a></li>
                                               
                    </ul>
                </li>
                <li><a href="javascript:void(0);" class="menu-toggle"><i class="zmdi zmdi-account-o"></i><span>Pacientes</span> </a>
                    <ul class="ml-menu">
                        <li><a href="anadir-paciente">Añadir Pacientes</a></li>                      
                        <li><a href="/historial-paciente">Historial médico</a></li>
                    </ul>
                </li>
        </aside>
        <aside id="rightsidebar" class="right-sidebar">
            <ul class="nav nav-tabs tab-nav-right" role="tablist">
                <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#skins">Skins</a></li>
            </ul>
    
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane in active in active" id="skins">
                <ul class="demo-choose-skin">
                    <li data-theme="red">
                        <div class="red"></div>
                        <span>Red</span> </li>
                    <li data-theme="purple">
                        <div class="purple"></div>
                        <span>Purple</span> </li>
                    <li data-theme="blue">
                        <div class="blue"></div>
                        <span>Blue</span> </li>
                    <li data-theme="cyan" class="active">
                        <div class="cyan"></div>
                        <span>Cyan</span> </li>
                    <li data-theme="green">
                        <div class="green"></div>
                        <span>Green</span> </li>
                    <li data-theme="deep-orange">
                        <div class="deep-orange"></div>
                        <span>Deep Orange</span> </li>
                    <li data-theme="blue-grey">
                        <div class="blue-grey"></div>
                        <span>Blue Grey</span> </li>
                    <li data-theme="black">
                        <div class="black"></div>
                        <span>Black</span> </li>
                    <li data-theme="blush">
                        <div class="blush"></div>
                        <span>Blush</span> </li>
                </ul>
            </div>

            </div>
        </aside>
    </section>

    <section class="content page-calendar">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-lg-4 col-xl-3">
                    <div class="card m-t-20">
                        <form method="POST" action="doctor-panel-de-control">
                            <div class="body">
                                <h3><strong>Agendar una Cita</strong></h3>
                                <br>
                                <input type="hidden" name="id_doctor" value="<%= id_doctor %>">
                                <input type="hidden" name="fecha_reserva" value="<%= fecha %>">

                                <strong>Fecha</strong>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="datetime-local" class="datepicker form-control"
                                            placeholder="Fecha de la consulta" name="fecha_consulta" min="<%%>" max="2015-04-24 10:00" step="3600">
                                    </div>
                                </div>

                                <strong>Paciente</strong>
                                <br><br>
                                <select name="id_paciente" class="form-control show-tick">
                                    <option value=""><strong>Seleccione una opción</strong></option>
                                    <%for(var i=0; i < numPacientes; i++){%>
                                        <option value="<%= pacientes[i]['id_persona']['id_persona'] %>">
                                            <%= pacientes[i]['id_persona']['apellido'] + " " + pacientes[i]['id_persona']['nombre']%>
                                        </option>
                                    <%}%>
                                </select>
                                <br><br>

                                <button type="submit" class="btn btn-raised g-bg-cyan">Enviar</button>
                                <a href="doctor-panel-de-control" class="btn btn-raised">
                                    Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-12 col-lg-8 col-xl-9">
                    <div class="card m-t-20">
                        <div class="body">
                            <button class="btn btn-raised btn-success btn-sm m-r-0 m-t-0"
                                id="change-view-day">Hoy</button>
                            <button class="btn btn-raised btn-default btn-sm m-r-0 m-t-0" id="change-view-week">Esta
                                Semana</button>
                            <button class="btn btn-raised btn-default btn-sm m-r-0 m-t-0" id="change-view-month">Este
                                Mes</button>
                            <div id="calendar">
                                <p id="calendar-data">
                                    <%= calendario %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="color-bg"></div>
    <!-- Jquery Core Js -->
    <script src="assets/bundles/libscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
    <script src="assets/bundles/morphingsearchscripts.bundle.js"></script> <!-- morphing search Js -->
    <script src="assets/bundles/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->

    <script src="assets/bundles/fullcalendarscripts.bundle.js"></script>
    <!--/ calender javascripts -->

    <script src="assets/bundles/mainscripts.bundle.js"></script><!-- Custom Js -->
    <script src="assets/bundles/morphingscripts.bundle.js"></script><!-- morphing search page js -->
    <script src="assets/js/pages/calendar/calendar.js"></script>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!-- SweetAlert2 CDN -->
    <% if(typeof alert !="undefined" ){ %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %> ,
                timer: <%= time %>
            });
        </script>
    <% } %>
</body>

</html>