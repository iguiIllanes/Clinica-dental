    <section class="content page-calendar">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-lg-4 col-xl-3">
                    <div class="card m-t-20">
                        <form action="paciente-panel-de-control" method="POST">
                            <div class="body">
                                <h3>
                                    <strong>Agendar una Cita</strong>
                                </h3>
                                <br>
                                <input type="hidden" name="fecha_reserva" value="<%= fecha %>">
                                <input type="hidden" name="id_paciente" value="<%= id_paciente %>">
                                <strong>Fecha</strong>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input name="fecha_consulta" type="datetime-local"
                                            class="datepicker form-control" placeholder="Fecha de reserva"
                                            min="<%= fecha+'T00:00' %>" step="3600">
                                    </div>
                                </div>
                                <strong>Doctor</strong>
                                <select name="id_doctor" class="form-control show-tick">
                                    <option value=""><strong>Seleccione una opción</strong></option>
                                    <% for(var i=0; i < numMedicos; i++ ){ %>
                                        <option value="<%= medicos[i]['id_persona']['id_persona'] %>">
                                            <%= "Dr" +" "+medicos[i]['id_persona']['apellido'] + " " + medicos[i]['id_persona']['nombre'] %></option>x
                                    <% } %>
                                </select>
                                <br><br>
                                
                                <strong>Pago de la Reserva</strong><br>
                                <small>Se le debitará 100 bs</small><br>
                                <div class=" form-group">
                                                <div class="form-line">
                                                    <input type="number" class="form-control"
                                                        placeholder="Número de la tarjeta">
                                                </div>
                            </div>


                            <strong>Fecha de Expiración</strong>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="date" class="datepicker form-control" placeholder="">
                                </div>
                            </div>


                            <strong>Código de Seguridad</strong><br>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="number" class="form-control" placeholder="CVC">
                                </div>
                            </div>

                            <button type="submit" class="btn btn-raised g-bg-cyan">Reservar</button>
                            <a href="paciente-panel-de-control" class="btn btn-raised">
                                Cancelar
                            </a>
                    </div>
                    </form>
                </div>
            </div>
            <div class="col-md-12 col-lg-8 col-xl-9">
                <div class="card m-t-20">
                    <div class="body">
                        <button class="btn btn-raised btn-success btn-sm m-r-0 m-t-0" id="change-view-day">Hoy</button>
                        <button class="btn btn-raised btn-default btn-sm m-r-0 m-t-0" id="change-view-week">Esta
                            Semana</button>
                        <button class="btn btn-raised btn-default btn-sm m-r-0 m-t-0" id="change-view-month">Este
                            Mes</button>
                        <div id="calendar">
                            <p id="calendar-data">
                                <%= calendario %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
